<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('css/main.css')}}">
        <link rel="stylesheet" href="{{asset('css/nav.css')}}">
        <link rel="stylesheet" href="{{asset('css/devis.css')}}">
        <link rel="stylesheet" href="{{asset('css/client.css')}}">
        <link rel="stylesheet" href="{{asset('css/haie.css')}}">
        <link rel="shortcut icon" href="{{asset('img/logo.png')}}" type="image/x-icon">
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <nav>  
        <img class="website_icon" src="{{ asset('img/logo.png')}}">
         <a class="navlinks" href="{{ path('accueil')}}">
            <img class="nav_img" src="{{ asset('img/home.png')}}">
         </a>
         {% if is_granted('ROLE_ADMIN') %}
         <a class="navlinks" href="{{ path('user_index')}}">
            <img class="nav_img" src="{{ asset('img/customer.png')}}">
         </a>
         {% endif %}
         
         <a class="navlinks" href="{{ path('devis')}}">
            <img class="nav_img" src="{{ asset('img/invoice.png')}}">
         </a>
         <a class="navlinks" href="{{ path('haie_index')}}">
            <img class="nav_img" src="{{ asset('img/hedge.png')}}">
         </a>
         <div class="btn-group">
         {% if app.user %}
               
            <button type="button" class="btn btn btn-success dropdown-toggle connect_button" data-bs-toggle="dropdown" aria-expanded="false">
            {{app.user.username}}
            </button>
            <ul class="dropdown-menu">
               <li><a class="dropdown-item" href="{{ path('app_logout') }}">DÃ©connexion</a></li>
            </ul>
         {% else %}   
         <a class="btn btn-success connect_button" href="{{ path('app_login') }}">Connectez vous</a>
         {% endif %}
         </div>
         
    </nav>
    <div class="page_ctn">
    {% block body %}
    
    {% endblock %}
    </div>
    </body>
</html>
