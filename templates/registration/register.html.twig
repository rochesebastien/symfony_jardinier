{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="content_ctn">
   
    <h2>Insciption d'un nouveau client</h2>
    {{ form_start(registrationForm,{'attr': {'class': ' w-25 rounded-top border bg-dark border-success  bg-opacity-10 d-flex justify-content-center flex-column align-items-center'}}) }}
        {{ form_row(registrationForm.username,{'attr': {'class': ' w-100 form-control'},'label':"Nom d'utilisateur"}) }}
         {{ form_row(registrationForm.password,{'attr': {'class': ' w-100 form-control'},'label':'Mot de passe'})}}
        {{ form_row(registrationForm.nom,{'attr': {'class': ' w-100 form-control'}}) }}
       {{ form_row(registrationForm.prenom,{'attr': {'class': ' w-100 form-control'}}) }}
        {{ form_row(registrationForm.adresse,{'attr': {'class': ' w-100 form-control'}}) }}
        {{ form_row(registrationForm.ville,{'attr': {'class': ' w-100 form-control'}}) }}
        {{ form_row(registrationForm.cp,{'attr': {'class': ' w-100 form-control'},'label':'Code postal'}) }}
        {{ form_row(registrationForm.type_client,{'attr': {'class': ' w-100 form-control'},'label':'Type du client'}) }}
        <button type="submit" class="btn btn-success mt-3 mb-3">Enregistrer</button>
    {{ form_end(registrationForm) }}
    
</div>
{% endblock %}
